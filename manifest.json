{
  "manifest_version": 3,
  "name": "Image Alt Text Generator",
  "description": "Generate alt text from image via right-click",
  "version": "1.0",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage", "clipboardWrite", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Alt Text Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["demo.html", "demo.css", "demo-install.js", "demo-video.mp4", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
